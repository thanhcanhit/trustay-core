{
  "info": {
    "name": "Room Instance Search & Billing",
    "description": "API collection for Room Instance Search and Billing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Landlord - Search Room Instances",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/rooms/instances/search?buildingId=b6e8a8f2-8c8c-4b8a-9b8a-7c8b8a8b8a8b&search=phòng",
          "host": ["{{baseUrl}}"],
          "path": ["rooms", "instances", "search"],
          "query": [
            {
              "key": "buildingId",
              "value": "b6e8a8f2-8c8c-4b8a-9b8a-7c8b8a8b8a8b",
              "description": "Building ID to search within",
              "disabled": false
            },
            {
              "key": "search",
              "value": "phòng",
              "description": "Search term for room number, name, owner/tenant info, address, or notes",
              "disabled": false
            },
            {
              "key": "status",
              "value": "occupied",
              "description": "Filter by room status: available, occupied, maintenance, reserved, unavailable",
              "disabled": true
            }
          ]
        },
        "description": "Landlord tìm kiếm room instances trong building của mình"
      }
    },
    {
      "name": "Landlord - Create Bill for Room Instance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"roomInstanceId\": \"f5c1cdbf-7b57-4d4d-9c04-8e8d59bd1d5d\",\n  \"billingPeriod\": \"2025-01\",\n  \"billingMonth\": 1,\n  \"billingYear\": 2025,\n  \"periodStart\": \"2025-01-01\",\n  \"periodEnd\": \"2025-01-31\",\n  \"occupancyCount\": 2,\n  \"meterReadings\": [\n    {\n      \"roomCostId\": \"electric-cost-id\",\n      \"currentReading\": 1500,\n      \"lastReading\": 1200\n    },\n    {\n      \"roomCostId\": \"water-cost-id\",\n      \"currentReading\": 310,\n      \"lastReading\": 250\n    }\n  ],\n  \"notes\": \"Hóa đơn thủ công tháng 1\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/bills/create-for-room",
          "host": ["{{baseUrl}}"],
          "path": ["bills", "create-for-room"]
        },
        "description": "Landlord tạo hóa đơn cho room instance"
      }
    }
  ]
}
