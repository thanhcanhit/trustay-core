{
  "info": {
    "_postman_id": "trustay-ai-simple",
    "name": "Trustay AI - Simple",
    "description": "Simple collection cho AI endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "AI Chat",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/ai/chat?query=Tìm phòng trọ giá rẻ",
          "host": ["{{baseUrl}}"],
          "path": ["ai", "chat"],
          "query": [
            {
              "key": "query",
              "value": "Tìm phòng trọ giá rẻ"
            }
          ]
        }
      }
    },
    {
      "name": "AI Chat with Auth",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/ai/chat?query=Tìm hóa đơn của tôi",
          "host": ["{{baseUrl}}"],
          "path": ["ai", "chat"],
          "query": [
            {
              "key": "query",
              "value": "Tìm hóa đơn của tôi"
            }
          ]
        }
      }
    },
    {
      "name": "AI Text2SQL",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"Tìm phòng trọ có giá dưới 5 triệu\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ai/text2sql",
          "host": ["{{baseUrl}}"],
          "path": ["ai", "text2sql"]
        }
      }
    },
    {
      "name": "AI Text2SQL with Auth",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"Tìm các khoản thanh toán của tôi\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ai/text2sql",
          "host": ["{{baseUrl}}"],
          "path": ["ai", "text2sql"]
        }
      }
    },
    {
      "name": "Get Chat History",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/ai/chat/history",
          "host": ["{{baseUrl}}"],
          "path": ["ai", "chat", "history"]
        }
      }
    },
    {
      "name": "Clear Chat History",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/ai/chat/history",
          "host": ["{{baseUrl}}"],
          "path": ["ai", "chat", "history"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE"
    }
  ]
}
